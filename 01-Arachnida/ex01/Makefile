NAME = spider
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
CC = gcc


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	@echo "Spider compiled successfully âœ…"

%.o: %.c 
	$(CC) -c $< 
	
clean:
		@rm -rf $(OBJ)
		@echo "Spider object files cleaned successfully ðŸ—‘"
fclean:
		@rm -rf $(OBJ)
		@rm -rf $(NAME)
		@echo "Spider object files and Spider cleaned successfully ðŸ—‘"

re: fclean all